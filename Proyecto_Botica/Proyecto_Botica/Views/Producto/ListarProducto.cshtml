@model IEnumerable<Proyecto_Botica.Models.Producto>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "ListarProducto";
}

<br>

<h1 class="titulo">Listar Producto</h1>

@if (TempData["Mensaje"] != null)
{
    var mensajeTipo = TempData["MensajeTipo"]?.ToString();
    var alertaClase = mensajeTipo switch
    {
        "eliminacion" => "alert-danger",
        "actualizado" => "alert-warning",
        _ => "alert-success"
    };

    <div class="alert @alertaClase" id="mensajeExito">
        @TempData["Mensaje"]
    </div>
}

<p>
    <a asp-action="AgregarProducto" class="btn btn-primary">Registrar Producto</a>
</p>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Categoría</th>
            <th class="fecha">Fabricación</th>
            <th class="fecha">Vencimiento</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Imagen</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.IdProducto)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.NombreCategoria)</td>
                <td class="fecha">@Html.DisplayFor(modelItem => item.FechaFabricacion)</td>
                <td class="fecha">@Html.DisplayFor(modelItem => item.FechaVencimiento)</td>
                <td>S/. @Html.DisplayFor(modelItem => item.Precio)</td>
                <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                <td style="text-align: center; vertical-align: middle;">
                    @if (!string.IsNullOrEmpty(item.Imagen))
                    {
                        <img src="@item.Imagen" alt="@item.Nombre" style="max-width: 50px; max-height: 50px; width: auto; height: auto;" />
                    }
                    else
                    {
                        <span>Sin imagen</span>
                    }
                </td>
                <td class="boton">
                    <div class="d-flex justify-content-around">
                        @Html.ActionLink("Editar", "EditProducto", new { id = item.IdProducto }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Ver Detalles", "VerDetalleProducto", new { id = item.IdProducto }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Eliminar", "EliminarProducto", new { id = item.IdProducto },
                                 new
                                 {
                                     @class = "btn btn-danger",
                                     onclick = "return confirm('¿Estás seguro de que deseas eliminar este producto?');"
                                 })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            setTimeout(function () {
                $("#mensajeExito").fadeOut("slow");
            }, 5000);
        });
    </script>
}
