@model Proyecto_Botica.Models.Proveedor

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "EditProveedor";
}

<div class="container mt-5">
    <h1 class="text-center text-dark mb-4">Editar Proveedor</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Proveedor</h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditProveedor">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group row">
                            <label asp-for="idProveedor" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="idProveedor" class="form-control" placeholder="ID del Proveedor" readonly />
                                <span asp-validation-for="idProveedor" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="form-group row">
                            <label asp-for="nombre" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="nombre" class="form-control" placeholder="Nombre del Proveedor" />
                                <span asp-validation-for="nombre" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="form-group row">
                            <label asp-for="telefono" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="telefono" class="form-control" placeholder="Teléfono" />
                                <span asp-validation-for="telefono" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="form-group row">
                            <label asp-for="correo" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="correo" class="form-control" placeholder="Correo Electrónico" />
                                <span asp-validation-for="correo" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="form-group row">
                            <label asp-for="direccion" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="direccion" class="form-control" placeholder="Dirección" />
                                <span asp-validation-for="direccion" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="form-group text-center">
                            <input type="submit" value="Guardar" class="btn btn-dark" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="ListarProveedor" class="btn btn-link">Volver a la lista</a>
    </div>
</div>