@model IEnumerable<Proyecto_Botica.Models.Proveedor>

@{
    ViewData["Title"] = "Listar Proveedor";
    Layout = null;
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
}

<div class="container mt-5">
    <h1 class="text-center text-dark mb-4">Listar Proveedor</h1>

    <p class="text-center">
        <a class="btn btn-primary" asp-action="AgregarProveedor">Crear Nuevo Proveedor</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover text-center">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().idProveedor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().telefono)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().correo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().direccion)
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.idProveedor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.telefono)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.correo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.direccion)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "EditProveedor", new { id = item.idProveedor }, new { @class = "btn btn-warning btn-sm" }) |
                            @Html.ActionLink("Eliminar", "EliminarProveedor", new { id = item.idProveedor }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>