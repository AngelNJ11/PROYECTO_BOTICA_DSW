@model IEnumerable<Proyecto_Botica.Models.Producto>

@{
    ViewData["Title"] = "ListarProductosVenta";
    var categorias = (IEnumerable<Categoria>)ViewData["Categorias"];
    var productosEscogidos = (List<Producto>)ViewData["productosEscogidos"];
    Layout = null;
    //Bootstrap CSS
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    //Bootstrap JS
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    //Bootstrap Icon
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    //SweetAlert
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

}

<div class="container">
    <nav class="navbar bg-primary">
        <div class="container-fluid  d-flex justify-content-between">
                <a class="navbar-brand text-white d-flex align-items-center" href="#">
                    <img src="~/img/icon-logo.jpg" alt="Logo" style="height: 40px; width: 40px;" />
                    <span style="font-weight: bold; font-size: 25px; line-height: 1;">BOTICA</span>
                </a>
            <a href="@Url.Action("Logout", "Home")" class="btn btn-primary">
                <span style="font-size: 18px"><i class="bi bi-box-arrow-right"></i> Cerrar sesión</span>
            </a>
            <div id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <span class="navbar-text text-white" style="margin-right: 20px;">
                            Bienvenido, Administrador @Context.Session.GetString("UsuarioNombre") @Context.Session.GetString("UsuarioApellido")
                        </span>
                        <button class="btn btn-warning position-relative" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
                            <i class="bi bi-cart4"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                @ViewBag.idproducto
                                <span class="visually-hidden">unread messages</span>
                            </span>
                        </button>

                        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
                            <div class="offcanvas-header">
                                <h5 class="offcanvas-title" id="offcanvasRightLabel"><i class="bi bi-cart4"></i> Mi carrito</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                            </div>
                            <div class="offcanvas-body">
                                <hr />
                                <h5>Productos</h5>
                                <hr />
                                @foreach (var item in productosEscogidos) {
                                    <div class="card mb-3" style="max-width: 540px;">
                                        <div class="row g-0">
                                            <div class="col-md-4">
                                                <img src="@item.Imagen" class="img-fluid rounded-start" alt="@item.Nombre" />
                                            </div>
                                            <div class="col-md-8">
                                                <div class="card-body">
                                                    <h5 class="card-title">@item.Nombre</h5>
                                                    <p class="card-text"><small class="text-body-secondary">S/. @item.Precio</small></p>
                                                    @Html.ActionLink("Eliminar", "eliminarProductoDeCarrito", "Venta", new { idProducto = item.IdProducto }, new { @class = "btn btn-outline-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="d-flex justify-content-between ps-2 pe-2">
                                    <h6>Subtotal</h6>
                                    <h6>S/ @ViewBag.subtotal</h6>
                                </div>
                                @Html.ActionLink("Comprar", "Comprar", "Venta", null, new { @class = "btn btn-success w-100" })
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div>
    
    <hr class="mt-5"/>
        @if (ViewBag.mensajeVenta != null)
        {
            <script>
                Swal.fire({
                    title: "¡Venta exitosa!",
                    icon: "success"
                });
            </script>
        }
    <div class="d-flex mt-5">
        <div class="col-4">
            <h5>Filtros</h5>
            <h5>Categorías (@categorias.Count())</h5>
            @foreach (var item in categorias) {
                @Html.ActionLink(item.Nombre, "ListarProductosVenta", "Venta", new { idCategoria = item.IdCategoria }, new { @class = "text-dark text-decoration-none d-block" })
            }
        </div>

        <div class="row">
            @foreach (var item in Model) {
                <div class="card col-4 m-1 shadow-sm mb-3 rounded" style="width: 18rem;">
                    @if (!string.IsNullOrEmpty(item.Imagen))
                    {
                        <img src="@item.Imagen" alt="@item.Nombre" />
                    }
                    else
                    {
                        <img src="" alt="@item.Nombre" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <p class="card-text">S/. @item.Precio</p>
                        @Html.ActionLink("Agregar", "agregarProductoAlCarrito", "Venta", new { idProducto = item.IdProducto }, new { @class = "btn btn-dark w-100" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
</div>