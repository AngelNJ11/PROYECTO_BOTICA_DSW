<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto_Botica</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="container">
            <a class="navbar-brand text-white d-flex align-items-center" href="#">
                <img src="~/img/icon-logo.jpg" alt="Logo" style="height: 40px; width: 40px;" />
                <span style="font-weight: bold; font-size: 25px; line-height: 1;">BOTICA</span>
            </a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownProducto"
                           role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Mantenimiento Producto
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownProducto">
                            <li><a class="dropdown-item" href="@Url.Action("AgregarProducto", "Producto")">Agregar Producto</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("ListarProducto", "Producto")">Listar Productos</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownProveedor"
                           role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Mantenimiento Proveedor
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownProveedor">
                            <li><a class="dropdown-item" href="@Url.Action("AgregarProveedor", "Proveedor")">Agregar Proveedor</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("ListarProveedor", "Proveedor")">Listar Proveedores</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <span class="navbar-text text-white" style="margin-right: 20px;">
                Bienvenido, Administrador @Context.Session.GetString("UsuarioNombre") @Context.Session.GetString("UsuarioApellido")
            </span>
            <a href="@Url.Action("Logout", "Home")"
               class="btn btn-danger">
                <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
            </a>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Proyecto_Botica - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
